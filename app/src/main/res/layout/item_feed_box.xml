<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tvFeedUserProfileImg"
            android:scaleType="centerCrop"
            android:src="@drawable/aa"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"/>

    <TextView
            android:text="Yuchocopie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/tvFeedUserName"
            app:layout_constraintStart_toEndOf="@+id/tvFeedUserProfileImg"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/tvFeedUserProfileImg"
            app:layout_constraintBottom_toBottomOf="@+id/tvFeedUserProfileImg"/>


    <com.smu.sangmyung.likelionandroidarchiving.PagerContainer
            android:id="@+id/pager_container"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#CCC"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFeedUserProfileImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </com.smu.sangmyung.likelionandroidarchiving.PagerContainer>
    <com.smu.sangmyung.likelionandroidarchiving.PagerIndicator
            android:id="@+id/pagerIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pager_container"/>
    <ImageView
            android:layout_width="@dimen/icon_SIZE"
            android:layout_height="@dimen/icon_SIZE"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:id="@+id/ivFeedHart"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/pager_container"
            app:layout_constraintStart_toStartOf="@+id/pager_container"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sms_black_24dp"
            android:tint="#272626"
            android:id="@+id/ivFeedbealoon"
            app:layout_constraintStart_toEndOf="@+id/ivFeedHart"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/ivFeedHart"
            app:layout_constraintBottom_toBottomOf="@+id/ivFeedHart"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_near"
            android:id="@+id/ivFeedshare"
            app:layout_constraintStart_toEndOf="@+id/ivFeedbealoon"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/ivFeedbealoon"
            app:layout_constraintBottom_toBottomOf="@+id/ivFeedbealoon"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="TYcnofo"
            android:textStyle="bold"
            android:textColor="@color/black0"
            app:layout_constraintStart_toStartOf="@+id/ivFeedHart"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivFeedHart"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/black0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:text="님 외"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black0"
            android:textStyle="bold"
            android:id="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="3dp" android:text="13명"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:text="this.is.iss"
            android:textColor="@color/black0"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:text="이 좋아합니다"
            android:textColor="@color/black0"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1A39D5"
            android:id="@+id/textView9" android:text="#햅피"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:text="댓글 4개 모두 보기"
            android:textColor="#b2b2b2"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textColor="@color/black0"
            android:textStyle="bold"
            android:="abraham"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textColor="@color/black0"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginStart="4dp"
            android:text="우왕... 입흐다,,,,"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"/>
    <ImageView
            android:layout_width="@dimen/icon_SIZE"
            android:layout_height="@dimen/icon_SIZE"
            android:id="@+id/tvFeedUserProfileImg2"
            android:scaleType="centerCrop"
            android:src="@drawable/aa"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
            android:text="댓글 달기 ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textColor="#b2b2b2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvFeedUserProfileImg2"
            app:layout_constraintBottom_toBottomOf="@+id/tvFeedUserProfileImg2"
            app:layout_constraintStart_toEndOf="@+id/tvFeedUserProfileImg2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:text="이게인생인가오"
            android:textColor="@color/black0"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/textView7" app:layout_constraintBottom_toBottomOf="@+id/textView7"/>


</android.support.constraint.ConstraintLayout>